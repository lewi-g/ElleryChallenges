{
  "name": "challenge-api",
  "version": "0.1.0",
  "description": "API for challenge app",
  "scripts": {
    "dev": "nodemon -e js,graphql --exec 'npm run update-graphql-imports && babel-node src/index.js'",
    "start": "node dist/index.js",
    "build": "babel src -d dist --ignore **/*.test.js",
    "update-graphql-imports": "rm -rf ./node_modules/.cache/@babel",
    "lint": "eslint src/",
    "test": "jest --coverage",
    "open-coverage": "open coverage/lcov-report/index.html"
  },
  "engines": {
    "node": ">=8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "apollo-datasource-mongodb": "^0.1.0",
    "apollo-server": "^2.6.9",
    "apollo-server-testing": "^2.8.1",
    "dotenv": "^8.0.0",
    "graphql": "^14.2.1",
    "graphql-request": "^1.8.2",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.4.0",
    "lodash": "^4.17.21",
    "mongodb": "^3.2.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.3",
    "apollo-link": "^1.2.13",
    "apollo-link-http": "^1.5.16",
    "babel-plugin-import-graphql": "^2.7.0",
    "eslint": "^5.16.0",
    "eslint-plugin-node": "^8.0.1",
    "husky": "^3.0.5",
    "jest": "^24.8.0",
    "node-fetch": "^2.6.0",
    "nodemon": "^1.19.0"
  },
  "private": true
}
